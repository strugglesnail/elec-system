    <sql id="MENU_LIST">
        SELECT
          m.id,
          m.parent_id,
          m.name,
          m.enname,
          m.path,
          m.url,
          m.icon,
          m.redirect,
          m.component,
          m.keep_alive,
          m.require_auth,
          m.available
        FROM sys_user u
        RIGHT JOIN sys_user_role ur ON u.id = ur.user_id
        RIGHT JOIN sys_menu r ON ur.role_id = r.id
        RIGHT JOIN sys_role_menu rm ON rm.role_id = r.id
        RIGHT JOIN sys_menu m On m.id = rm.menu_id
    </sql>

